@model Order_Pizza.ViewModels.OrderVM

@{
    ViewData["Title"] = "Cancel order";
}

<h1>Cancel page</h1>

<h3>Are you sure you want to cancel your order?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2 d-flex align-items-center">
            @Html.DisplayNameFor(model => model.Pizza.Image_Url)
        </dt>
        <dd class="col-sm-10">
            <img src="~/upload/images/@Model.Pizza.Image_Url" class="rounded my-2"
                 width="100" height="100" asp-append-version="true" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pizza.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pizza.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pizza.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pizza.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.Quantity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.Quantity)
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="@Model.Order.Id" />
        <input type="submit" value="Cancel" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
