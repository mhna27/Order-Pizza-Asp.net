@model Order_Pizza.ViewModels.PizzaVM

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Pizza</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Pizza.Name" class="control-label"></label>
                <input asp-for="Pizza.Name" class="form-control" />
                <span asp-validation-for="Pizza.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pizza.Description" class="control-label"></label>
                <input asp-for="Pizza.Description" class="form-control" />
                <span asp-validation-for="Pizza.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image_Pizza" class="control-label"></label>
                <input asp-for="Image_Pizza" type="file" accept=".jpg,.png" class="form-control" />
                <span asp-validation-for="Image_Pizza" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary my-3" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
